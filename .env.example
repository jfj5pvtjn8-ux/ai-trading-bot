# Trading Bot Environment Configuration
# Copy this file to .env and fill in your values

# Environment
TRADING_BOT_ENV=development

# Directories
DATA_DIR=data/live
CONFIG_DIR=config
LOGS_DIR=logs

# Logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=7

# Storage
PARQUET_RETENTION_DAYS=7

# Exchange API (Binance)
BINANCE_REST_ENDPOINT=https://api.binance.com/api/v3/klines
BINANCE_WS_ENDPOINT=wss://stream.binance.com:9443
BINANCE_REQUEST_TIMEOUT=30

# API Credentials (if needed for private endpoints in future)
# BINANCE_API_KEY=
# BINANCE_API_SECRET=

# Application
APP_NAME=AI Trading Bot
MAX_CANDLES_SIZE=600
INITIAL_RETRIES=3
RETRY_DELAY=0.5

# Timeframe Intervals (seconds)
TIMEFRAME_1M=60
TIMEFRAME_3M=180
TIMEFRAME_5M=300
TIMEFRAME_15M=900
TIMEFRAME_30M=1800
TIMEFRAME_1H=3600

# Health Check Endpoint
HEALTH_PORT=8080
